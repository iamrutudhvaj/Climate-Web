<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlink}}
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_contain">
                    <form class="temp_form">
                        <input type="text" id="cityname" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="temp_info">
                    <div class="top_layer">
                        <p id="day">Friday</p>
                        <p id="today_date">23 Oct</p>
                    </div>
                    <div class="main_layer">
                        <p class="city_name">Get output here</p>
                        <div class="middle_layer">
                            <p class="temp"><span>0</span><sup>o</sup>C</p>
                            <p class="temp_status"> <i class="fas fa-cloud" aria-hidden="true"></i> </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {{>footer}}

    <script src="js\main.js"></script>
</body>

</html>